{
    "type": "modal",
    "callback_id": "create-fly-day-modal",
    "title": {
        "type": "plain_text",
        "text": "Request a Fly Day Event"
    },
    "blocks": [
        {
            "type": "section",
            "block_id": "intro-section",
            "text": {
                "type": "mrkdwn",
                "text": "To request a Fly Day event, please provide the following information:"
            }
        },
        {
            "type": "section",
            "block_id": "section-1",
            "text": {
                "type": "mrkdwn",
                "text": "Where will you be flying?"
            },
            "accessory": {
                "type": "static_select",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Select a field"
                },
                "options": [
                    {
                        "text": {
                            "type": "plain_text",
                            "text": "Lake Lagunita"
                        },
                        "value": "lake-lag"
                    },
                    {
                        "text": {
                            "type": "plain_text",
                            "text": "Coyote Hill"
                        },
                        "value": "coyote-hill"
                    },
                    {
                        "text": {
                            "type": "plain_text",
                            "text": "Off Campus"
                        },
                        "value": "off-campus"
                    }
                ],
                "action_id": "flying-field"
            }
        },
        {
            "type": "section",
            "block_id": "section-2",
            "text": {
                "type": "mrkdwn",
                "text": "What type of event?"
            },
            "accessory": {
                "type": "static_select",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Select an option"
                },
                "options": [
                    {
                        "text": {
                            "type": "plain_text",
                            "text": "Private"
                        },
                        "value": "private"
                    },
                    {
                        "text": {
                            "type": "plain_text",
                            "text": "Public"
                        },
                        "value": "public"
                    }
                ],
                "action_id": "event_type"
            }
        },
        {
            "type": "section",
            "block_id": "context-section",
            "text": {
                "type": "mrkdwn",
                "text": "*Private:* Only notifies the leadership team. \n *Public:* Notifies all members and sends alerts leading up to the event."
            }
        },
        {
            "type": "input",
            "block_id": "date_picker_input",
            "label": {
                "type": "plain_text",
                "text": "Select Date"
            },
            "element": {
                "type": "datepicker",
                "action_id": "date_picker_action",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Select a date"
                }
            }
        },
        {
            "type": "input",
            "block_id": "start_time_picker_input",
            "label": {
                "type": "plain_text",
                "text": "Start Time"
            },
            "element": {
                "type": "timepicker",
                "action_id": "start_time_picker_action",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Select a start time"
                }
            }
        },
        {
            "type": "input",
            "block_id": "end_time_picker_input",
            "label": {
                "type": "plain_text",
                "text": "End Time"
            },
            "element": {
                "type": "timepicker",
                "action_id": "end_time_picker_action",
                "placeholder": {
                    "type": "plain_text",
                    "text": "Select an end time"
                }
            }
        },
        {
            "type": "input",
            "block_id": "long_text_input",
            "label": {
                "type": "plain_text",
                "text": "Event Details (Optional)"
            },
            "element": {
                "type": "plain_text_input",
                "action_id": "long_text_input",
                "multiline": true
            }
        }
    ],
    "submit": {
        "type": "plain_text",
        "text": "Request Fly Day"
    }
}
